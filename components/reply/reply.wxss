/* components/reply/reply.wxss */
.container{
    width: 100%;
    position:fixed;
    bottom: 0px;
    background-color: #F2F2F2;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items: center;
    box-shadow: 1px -1px 1px #e3e3e3;
    z-index: 99;
}

.input{
    display: inline-block;
    margin: 6rpx 0;
    width:80%;
    height: 1rem;
    font-size: 14px;
    border: 1px solid #999;
    border-radius: 15px;

}

.form{
    display: flex;
    width: 100%;
}

.icon{
    width: 30px;
    height: 30px;
}

.form1{
    width: 100%;
}

.send{
    display:flex;
    padding:0 !important;
    border: none !important;
    margin:0 !important;
    width:100rpx;
    justify-content:center;
    background-color:#00758F;
    height:26px;
    align-items:center;
    border-radius:16rpx;
    color:#f5f5f5;
    font-size: 30rpx;
    font-weight: 400;

}
button:not([size='mini']){
  min-height: 52rpx;
  width: 108rpx;
}
.inform{
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin:0 20rpx;
    
}
button:not([size='mini']){
  min-height: 0rpx;
  width: 100rpx;
}

.mask{
    background-color:white;
    position: fixed;
    top: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    z-index: 50;
}