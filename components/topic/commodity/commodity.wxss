/* components/topic/commodity/commodity.wxss */
.container{
    display: flex;
    position: relative;
    box-shadow: 2px 4px 3px #e3e3e3;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    align-items: center;
    padding-bottom: 20rpx;
}

.content{
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    align-items: center;

}

.sub-avatar{
    width: 100%;
}

.image_container{
    display: flex;
    flex-direction: row;
    width: 92%;
    justify-content: flex-start;
}

.image{
    width: 210rpx;
    height: 210rpx;
    margin: 8rpx;
    z-index: 90;
}

.description{
    width: 90%;
    text-indent: 50rpx;
    text-overflow: -o-ellipsis-lastline;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 10rpx 36rpx;
}

.price-container{
    display: flex;
    width: 90%;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    position: relative;
}

.price{
    display: flex;
    justify-content: center;
    width: 100rpx;
    font-size: 36rpx;
    font-weight: 800;
    color: #F44336;
}
.comment-num{
    width: 100rpx;
    display: flex;
    justify-content: center;
    font-size: 24rpx;
    color: #999;
}

.icon{
    position: relative;
    left:222rpx;
    top:4rpx;
    width: 80rpx;
    height: 70rpx;
}