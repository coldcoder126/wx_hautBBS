/* components/topic/activity/activity.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: relative;
    box-shadow: 2px 4px 3px #e3e3e3;
    padding-bottom: 20rpx;
    padding-top: 10rpx;
}

.text{
    display: flex;
    flex-direction: column;
    width: 65%;
}

.title{

    margin-bottom: 8rpx;
    margin-top: 10rpx;
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    text-overflow: -o-ellipsis-lastline;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.time{

}

.place{

}

.sponsor{

}

.description{

    text-overflow: -o-ellipsis-lastline;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.image{
    width: 30%;
    max-height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    top:10rpx;
  
}

.img{
    max-width: 90%;
    height: 240rpx;
    padding: 0 20rpx;
}