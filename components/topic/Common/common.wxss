/* components/topic/Common/common.wxss */
.container{
  display: flex;
  box-shadow: 2px 4px 3px #e3e3e3;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding-bottom: 20rpx;
}

.text_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding-bottom: 10rpx;
}

.title {
  width: 92%;
  text-indent: 50rpx;
  margin-bottom: 8rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.description {
  width: 92%;
  text-indent: 50rpx;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.image_container{
  display: flex;
  flex-direction: row;
  width: 92%;
  justify-content: flex-start;
}

.image{
  width: 210rpx;
  height: 210rpx;
  margin: 8rpx;
}
