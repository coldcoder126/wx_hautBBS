/* components/comment/main_comment/comment.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;

}

.content{
    width: 90%;
    padding-bottom: 20rpx;
    border-bottom:0.5px #c2c2c2 solid;
    padding-top:10rpx;
}

.sub-comment{
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    background-color: #E7E7E7;
    
}

.seeMore{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: #E7E7E7;
    color: #01AAED;
}

.scroll{
    position: fixed;
    background-color: #E7E7E7;
    width: 100%;
    height: 65%;
    bottom: 0;
    display: flex;
    z-index: 98;
    padding-bottom: 30rpx;
    margin-bottom: 70rpx;
}

.mask{
    background-color: #999999;
    position:fixed;
    top:0;
    opacity: 0.6;
    width: 100%;
    height: 100%;
    z-index: 90;
}


.more-header{
    height: 36rpx;
    margin: 0 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.close{
    height: 26rpx;
    width: 26rpx;
}
