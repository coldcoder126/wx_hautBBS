page{
    background-color: #f8f8f8
  }

.avatar-box{
    width: 100%;
    height: 200rpx;
    background-color: #FFF;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;

}
  .avatar{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
  }
  .button{
    margin-top: 30px;
      width: 80%;
      border-radius: 98rpx;
    }

    .notice{
        margin: 6rpx 20rpx;
        font-size: 28rpx;
        color:#999999;
    }
    .other{
      display: flex;
      flex-direction: row-reverse;
      font-size: 24rpx;
      color:#01AAED;
      margin: 6rpx;
    }

    .description{
        min-height: 80rpx;
    }
    .nickName{
        min-height: 40rpx;
    }
    .gender{
        min-height: 40rpx;
    }
    .input-area{
        padding: 6rpx 30rpx;
        background-color: #fff;
    }
.mask{

  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  z-index: 50;
  top:0;


}

.modal{
  display: flex;
  flex-direction: column;
  width: 60%;
  border-radius: 20rpx;
  z-index: 60;
  background-color: #fff;
}
.btn-box{
  display: flex;
  width: 100%;
}

.switch{
  display: flex;
  margin: 20rpx;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
}