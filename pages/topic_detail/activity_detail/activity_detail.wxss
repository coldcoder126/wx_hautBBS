page{
    background-color: #f8f8f8
}
.container{
    width:100%;
}
.head{
padding-top:40rpx;
padding-bottom:40rpx;
display:flex;
flex-direction:column;
align-items:center;
}
.image{
    max-width:500rpx;
    height: 330rpx;
}

.title{
    display: table-cell;
    vertical-align:middle;
    text-align:center;
margin-top:20rpx;
font-size:38rpx;
font-weight:600;
padding:0 60rpx;
}
.text{
display: flex;
justify-content:flex-start;
width:90%;
padding:0 36rpx;
}

.headline{
display:flex;
flex-direction:column;
align-items:center;
font-size:30rpx;
font-weight:600;
color:#2f2f2f;
background-color:#fff;
margin:20 0rpx;
}

.body{
width:100%;
display:flex;
flex-direction:column;
align-content:center;
justify-content: center;
margin-bottom:30rpx;
background-color:#fff;
padding:10rpx;
}
.detail{
    display: flex;
    justify-content: center;
    align-content: center;
    text-indent:50rpx;
    width:90%;
    padding:0 36rpx;
    

}

.share-box{
    display:flex;
    justify-content: center;
    align-items: center;
    margin:20rpx 0;
}

.share{
    display: flex;
    padding: 0 !important;
    border: none !important;
}

.img{
    width: 80rpx;
    height: 80rpx;
}

.publish-info{
    display: flex;
    justify-content: center;
    align-content: center;
    font-weight: 200;
    font-size: 20rpx;
    color: #515151;

}